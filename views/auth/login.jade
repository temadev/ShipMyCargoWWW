extends ../layouts/main
block meta
  title Sign In
block content
  #block-page.content-block
    .container
      .row
        .col-md-8.col-md-offset-2
          .page-content
            .page-header
              h1 Sign In
            .row
              .col-lg-9.col-lg-offset-3
                p
                  a.btn.btn-primary(href='/auth/facebook')
                    i.fa.fa-facebook-official
                    | &nbsp;Login with Facebook
                  | &nbsp;
                  a.btn.btn-danger(href='/auth/google')
                    i.fa.fa-google
                    | &nbsp;Login with Google
                p OR
            form#loginForm.form-horizontal(role='form')
              .form-group
                label.col-lg-3.control-label(for='loginEmail') Email address
                .col-lg-6
                  input.form-control#loginEmail(type='email', name='loginEmail', placeholder='Email address')
              .form-group
                label.col-lg-3.control-label(for='loginPassword') Password
                .col-lg-6
                  input.form-control#loginPassword(type='password', name='loginPassword', placeholder='Password')
              .form-group
                .col-lg-offset-3.col-lg-6
                  #errors.hidden.text-danger.alert.alert-danger
                  button.btn.btn-primary(type='submit') Sign In
                  | &nbsp;
                  | Don't Have an Account? <a href="/auth/register">Join</a>
